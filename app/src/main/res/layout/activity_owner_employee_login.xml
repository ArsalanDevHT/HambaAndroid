<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@drawable/rsz_log_in_bg"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.OwnerEmployeeLoginActivity"
        android:orientation="vertical"
        android:gravity="center|top">
        <ImageView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/hamba_white"/>
        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/_70sdp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TI_email"
                android:tag="email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <EditText
                    android:gravity="center"
                    android:id="@+id/ET_email"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="10dp"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:hint="Email / Username"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_focus_out_white" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:tag="password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:textSize="16sp"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/colorWhite"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:padding="2dp">
                <EditText
                    android:id="@+id/ET_pass"
                    android:paddingStart="28dp"
                    android:gravity="center"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:hint="*********"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_focus_out_white"
                    />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lin_forgetpass"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_marginEnd="42dp">
                <TextView
                    android:gravity="end"
                    android:textColor="@color/colorDarkPrimary"
                    style="@style/light_style"
                    android:text="Forgot Password?"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDarkPrimary"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="60dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_register"
                    android:layout_margin="8dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_primary_btn"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>