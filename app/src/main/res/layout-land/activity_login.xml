<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.LoginActivity"
    android:orientation="horizontal"
    >
    <ScrollView
        android:visibility="visible"
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rsz_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/hamba_white"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="Welcome to Hamba"
                        style="@style/label_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Phone Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <LinearLayout
                        android:background="@drawable/gray_rounded_corners"
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp">
                        <com.rilixtech.CountryCodePicker
                            android:layout_marginStart="8dp"
                            app:ccp_textColor="@color/colorAccent"
                            app:ccp_showFullName="false"
                            android:id="@+id/ccp"
                            app:ccp_hideNameCode="true"
                            app:ccp_enableHint="false"
                            app:ccp_defaultCode="91"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_margin="6dp"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/vertical_liine"/>
                        <EditText
                            android:backgroundTint="@color/colortrans"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/phone_no"
                            android:inputType="phone"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please enter an account number"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/register"
                        android:layout_margin="8dp"
                        android:text="Sign up"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:minWidth="@dimen/_230sdp"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/accent_btn"/>

                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or login with"/>

                <LinearLayout

                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/btn_fb"
                    android:clickable="true"
                    android:maxWidth="300dp"
                    android:minWidth="@dimen/_220sdp"
                    android:layout_width="300dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center|start"
                    android:background="@drawable/fb_button"
                    android:elevation="5dp"
                    >
                    <ImageView
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/fb_icon"
                        android:scaleType="centerInside"/>
                    <ImageView
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/vertical_liine"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Login with facebook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:clickable="true"

                    android:maxWidth="@dimen/_300sdp"
                    android:minWidth="@dimen/_220sdp"
                    android:layout_width="300dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center|start"
                    android:elevation="5dp"
                    android:background="@drawable/tiwitter_button"
                    >
                    <ImageView
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/twitter_icon"
                        android:scaleType="centerInside"/>
                    <ImageView
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/vertical_liine"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Login with twitter"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_gmail"
                    android:clickable="true"
                    android:layout_marginTop="8dp"
                    android:maxWidth="@dimen/_300sdp"
                    android:minWidth="@dimen/_220sdp"
                    android:layout_width="300dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center|start"
                    android:elevation="5dp"
                    android:background="@drawable/google_button">
                    <ImageView
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/google_icon"
                        android:scaleType="centerInside"/>
                    <ImageView
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/vertical_liine"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Login with gmail"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@drawable/verify_code_bg"
        android:visibility="gone"
        android:id="@+id/verify_view"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Enter security pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:text="We sent a text message with a security pin to verify your phone number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/accent_btn"
            android:layout_margin="@dimen/_16sdp">

            <EditText
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:backgroundTint="@color/colortrans"
                android:gravity="center"
                android:layout_margin="8dp"
                android:id="@+id/code"
                android:inputType="numberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0 0 0 0 0 0"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:maxLength="6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <Button
                android:id="@+id/verify_btn"
                android:layout_margin="8dp"
                android:text="Verify code"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:background="@drawable/accent_btn"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/resend_otp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Problems receiving your pin?"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>