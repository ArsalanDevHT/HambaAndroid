<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_log_in_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.EmployeeSignUpActivity"
        android:orientation="vertical"
        android:gravity="center|top"
        android:animateLayoutChanges="true">
        <ImageView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/hamba_white"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:textColor="@color/colorDarkPrimary"
                android:textSize="20sp"
                android:text="Business Owner Signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:id="@+id/form"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TI_name"
                android:layout_width="wrap_content"
                android:tag="name"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:animateLayoutChanges="true">
                <EditText
                    android:id="@+id/ET_name"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:hint="Store name"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_focus_out_white"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TI_email"
                android:tag="email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                >
                <EditText
                    android:gravity="center"
                    android:id="@+id/ET_email"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_focus_out_white"/>
            </android.support.design.widget.TextInputLayout>



            <LinearLayout
                android:id="@+id/field"
                android:background="@drawable/edit_text_focus_out_white"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:gravity="center|start">
                <net.hamba.android.Customes.CountryCodePicker
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    app:ccp_textColor="@color/colorAccent"
                    app:ccp_showFullName="false"
                    android:id="@+id/ccp"
                    app:ccp_hideNameCode="true"
                    app:ccp_hidePhoneCode="true"
                    app:ccp_enableHint="false"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:layout_margin="4dp"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/vertical_liine"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TI_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@color/colortrans">
                    <EditText
                        android:gravity="center"
                        android:id="@+id/ET_city"
                        android:paddingStart="12dp"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:background="@color/colortrans"
                        android:hint="City name"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:textSize="12sp"
                android:id="@+id/error"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_gravity="start"
                android:gravity="center"
                android:visibility="gone"
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error"
                android:textColor="@color/orange_red"/>
            <android.support.design.widget.TextInputLayout
                android:tag="password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:textSize="16sp"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/colorWhite"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp">
                <EditText
                    android:id="@+id/ET_pass"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="6dp"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textSize="16sp"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_focus_out_white"
                    />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Business Type"
                    android:textColor="@color/colorWhite"/>
                <LinearLayout
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center">
                        <Switch
                            android:id="@+id/SW_shop_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/TV_shop_owner"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDarkPrimary"
                            android:text="Shop Owner"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center">
                        <Switch
                            android:id="@+id/SW_wholesale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/TV_wholesale"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDarkPrimary"
                            android:text="Wholesale"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center">
                        <Switch
                            android:id="@+id/SW_delivery_boy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/TV_delivery_boy"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDarkPrimary"
                            android:text="Delivery Boy"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_255sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center">
                        <Switch
                            android:id="@+id/SW_delivery_com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/TV_delivery_com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDarkPrimary"
                            android:text="Delivery Company"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/error2"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select Business type"
                    android:textColor="@color/orange_red"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_register"
                    android:layout_margin="8dp"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_primary_btn"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>